{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/bundles/competition/css/competition.css" type="text/css" media="screen">
{% endblock %}

{% block body %}
    <main>
        <header><h1>{{ 'round.title'|trans({'%roundName%' : round.name}) }}</h1></header>

        {% include 'CompetitionBundle:partials:flashes.html.twig' %}

        {% if round.id %}
            {% include 'CompetitionBundle:Scores:scoreGrid.html.twig' with {'players': round.players} %}

            {% include 'CompetitionBundle:Scores:standings.html.twig' %}
        {% endif %}

        {% include 'CompetitionBundle:Scores:roundForm.html.twig' with {'form': roundForm} %}
    </main>
{% endblock %}